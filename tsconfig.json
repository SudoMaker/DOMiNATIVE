{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noEmitHelpers": false,
		"noEmitOnError": false,
		"skipLibCheck": false,
		"allowJs": true,
		"lib": ["es2017"],
		"baseUrl": "."
	},
	"exclude": ["node_modules"]
}